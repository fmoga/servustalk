extends layout

block append scripts
  script(src='/public/js/history.js')

block header
  #header
    | Currently logged in as 
    span.username #{everyauth.google.user.name}
    span#logout
      a(href='/logout') Logout

block content
  table
    tr
      td#messagebox
        .scrollr
      td#buddylist(rowspan="2")
        .scrollr
          p
            span#title Online
            a#toggle(href='#', full='1') &raquo;
          ul
    tr
      td#inputbox
        textarea#inputfield(rows='2')
        #desktop
          input#desknot(type='checkbox')
          span Desktop notifications
