extends layout

block append stylesheets
  link(rel="stylesheet", href="public/fancybox/jquery.fancybox-1.3.4.css", type="text/css", media="screen")

block append scripts
  script(src='http://balupton.github.com/jquery-syntaxhighlighter/scripts/jquery.syntaxhighlighter.min.js')
  script(src='/public/fancybox/jquery.fancybox-1.3.4.pack.js')
  script(src='/socket.io/socket.io.js')
  script(src='/public/js/message.js')
  script(src='/public/js/script.js')
  script(src='http://www.google.com/jsapi')
  script(src='/public/js/qcal_loader.js')

block header
  #header
    span#roomTitle
    a#changeTitle(href='#') Change title
    span#logout
      a(href='/logout') Logout
    span#logout
        | |
    span#logout
      a(href='/history',target='_blank') History

block content
  table
    tr
      td#messagebox
        .scrollr
      td#buddylist(rowspan="2")
        .scrollr
          p 
            span#title Online
            // a#toggle(href='#', full='1') &raquo;
          ul
          span#noise
        hr
        #calendar
          table.fullheight
            tr
              td
                a#calendar_link(target='_blank', href='https://www.google.com/calendar/render?cid=fv690mq7i7jk6l0mhu9hd5uvms%40group.calendar.google.com')
                  img(src='/public/images/calendar.gif')
            tr
              td.fullheight
                #events.scrollr
    tr
      td#inputbox
        textarea#inputfield(rows='2')
        #footer
          | Logged in as 
          span#loggedUser.username #{everyauth.google.user.name}
          span#desktop
            input#desknot(type='checkbox') 
            span Desktop notifications
  
  div(style='display:none')
    div#settings
      a#settingsLink(href='#settings') Settings
